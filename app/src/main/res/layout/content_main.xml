<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/buttonFormulas"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/formularer_button_bg"
        android:text="@string/tools"
        android:textColor="@color/mainBackground"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquipment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEquipment"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/formularer_button_bg"
        android:text="@string/equipment"
        android:textColor="@color/mainBackground"
        app:layout_constraintBottom_toTopOf="@+id/buttonPriceHelper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFormulas" />

    <Button
        android:id="@+id/buttonPriceHelper"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/formularer_button_bg"
        android:text="@string/price"
        android:textColor="@color/mainBackground"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEquipment" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/formularer_button_bg"
        android:text="@string/action_settings"
        android:textColor="@color/mainBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPriceHelper" />

    <!--<ImageView
        android:id="@+id/logo_view"
        android:layout_width="166dp"
        android:layout_height="68dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/tzzapp_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSettings" />-->


</androidx.constraintlayout.widget.ConstraintLayout>