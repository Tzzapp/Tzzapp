<resources>

    <!-- Light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6C63FF</item>
        <item name="colorPrimaryDark">#6C63FF</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="backgroundcolor">#ffffff</item>
        <item name="mainText">#2D313D</item>
    </style>

    <!-- Dark application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6C63FF</item>
        <item name="colorPrimaryDark">#6C63FF</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="backgroundcolor">#2D313D</item>
        <item name="mainText">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

