<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usn.tzzapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:killAfterRestore="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Heating"
            android:label="@string/title_activity_heating"
            android:parentActivityName=".Formulas"
            android:theme="@style/lamp" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PreferenceTheme"></activity>
        <activity
            android:name=".PriceHelper"
            android:label="@string/price"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".equipment.Equipment"
            android:label="@string/equipment"
            android:parentActivityName=".MainActivity"
            android:theme="@style/equipmentTheme" />
        <activity
            android:name=".Formulas"
            android:label="@string/title_activity_forms"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Lamps"
            android:label="@string/lamps"
            android:parentActivityName=".Formulas"
            android:theme="@style/lamp" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".equipment.EquipmentItemActivity"
            android:label="@string/equipment"
            android:parentActivityName=".equipment.Equipment"
            android:theme="@style/item"></activity>
    </application>

</manifest>